
@{
    ViewBag.Title = "sales";
    <link href="~/Content/sales.css" rel="stylesheet" />
}

<article>
    
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <a href="~/Arealiteratura/authors" class="btn btn-primary btn-lg" role="button">autores</a>
        <a href="~/Arealiteratura/sales" class="btn btn-primary btn-lg " tabindex="-1" role="button">salas</a>
        <a href="~/Arealiteratura/titles" class="btn btn-primary btn-lg " tabindex="-1" role="button">titulos</a>
        <a href="~/Arealiteratura/employee" class="btn btn-primary btn-lg " tabindex="-1" role="button">empleados</a>

    </div>
    <h1 style="text-align:center">salas</h1>


    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>

                        <th style="width:25%">numero orden</th>
                        <th style="width:25%">fecha orden</th>
                        <th style="width:25%">condicones pago 1</th>
                        <th style="width:25%">condicione pago 2</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.ord_num</td>
                            <td>@item.ord_date</td>
                            <td>@item.payterms</td>
                            <td>@item.payterms</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</article>

