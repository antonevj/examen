
@{
    ViewBag.Title = "titles";
}

<article>

    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <a href="~/Arealiteratura/authors" class="btn btn-primary btn-lg" role="button" aria-disabled="true">autores</a>
        <a href="~/Arealiteratura/sales" class="btn btn-primary btn-lg " tabindex="-1" role="button" aria-disabled="true">salas</a>
        <a href="~/Arealiteratura/titles" class="btn btn-primary btn-lg " tabindex="-1" role="button" aria-disabled="true">titulos</a>
        <a href="~/Arealiteratura/employee" class="btn btn-primary btn-lg " tabindex="-1" role="button" aria-disabled="true">empleados</a>

    </div>
    <br />
    <br />
    <h2>libros</h2>


    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th style="width:10%">ID</th>
                        <th style="width:25%">tipo</th>
                        <th style="width:20%">precio</th>
                        <th style="width:25%">avances</th>
                        <th style="width:20%">fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.title_id</td>

                            <td>@item.type</td>
                            <td>@item.price</td>
                            <td>@item.advance</td>
                            <td>@item.pubdate</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</article>





