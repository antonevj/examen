
@{
    ViewBag.Title = "titles";
}
<link href="~/Content/menu.css" rel="stylesheet" />
<article>


    <nav class="navbar navbar-expand-lg navbar-light bg-ligh">


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item active">
                    <a class="nav-link" href="~/Arealiteratura/authors">autores</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="~/Arealiteratura/employee">empleados</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="~/Arealiteratura/sales">salas</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="~/Arealiteratura/titles">libros</a>
                </li>

            </ul>

        </div>
    </nav>


    <section class="banner-1">
        <font style="text-align:center;  font-family: Jokerman;color:aliceblue" size="7">LIBROS</font>
    </section>
    <br />
    <br />
    <br />
    <h1 style="text-align:center;  font-family: Jokerman">.</h1>

    <br />


    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th style="width:10%">ID</th>
                        <th style="width:25%">tipo</th>
                        <th style="width:20%">precio</th>
                        <th style="width:25%">avances</th>
                        <th style="width:20%">fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.title_id</td>

                            <td>@item.type</td>
                            <td>@item.price</td>
                            <td>@item.advance</td>
                            <td>@item.pubdate</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</article>





